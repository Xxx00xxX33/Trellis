{
  "include": [
    ".trellis/scripts/**/*.py",
    ".claude/hooks/**/*.py",
    "src/templates/**/*.py",
  ],
  "exclude": ["**/node_modules", "**/__pycache__", "dist"],
  "typeCheckingMode": "standard",
  "pythonVersion": "3.10",
  "reportMissingImports": true,
  "reportMissingTypeStubs": false,
  "reportUnusedVariable": true,
  "reportUnusedImport": "warning",
}
